#!/bin/sh
# preinst script for steem
#
# see: dh_installdeb(1)

set -e

echo $1 >> /tmp/testpkg
case "$1" in
	install)
		getent group steem >/dev/null || groupadd -r steem
		getent passwd steem >/dev/null || useradd -g steem -r -d /opt/steem -s /sbin/nologin steem
	;;

	upgrade)
		getent group steem >/dev/null || groupadd -r steem
		getent passwd steem >/dev/null || useradd -g steem -r -d /opt/steem -s /sbin/nologin steem
		systemctl stop steemd
	;;

	abort-upgrade)
	;;

	*)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

